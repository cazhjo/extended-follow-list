{
    "name": "Extended Follow List - Twitch",
    "description": "Add livestreamers from other platforms to your follow list on Twitch",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://*.twitch.tv/*"
            ],
            "js": [
                "content-script.js",
                "custom-follow-info.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inject.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}